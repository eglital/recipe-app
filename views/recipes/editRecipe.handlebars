<div class="templatemo_main">
        
  <div class="templatemo_content">
    <form class="form-horizontal" action="/recipes/edit/{{recipe._id}}" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input type="text" name="name" class="form-control" id="name" value="{{recipe.name}}">
        </div>
      </div>
      <div class="form-group">
        <label for="recipeYield" class="col-sm-2 control-label">Portions</label>
        <div class="col-sm-10">
          <input type="number" name="recipeYield" class="form-control" id="recipeYield" value="{{recipe.recipeYield}}">
        </div>
      </div>
      <div class="form-group">
        <label for="ingredients" class="col-sm-2 control-label">Ingredients</label>
        <div class="col-sm-10">
        <textarea class="form-control" rows="5" name="ingredients" id="ingredients">{{recipe.ingredients}}</textarea>
        </div>
      </div>
      <div class="form-group">
        <label for="instructions" class="col-sm-2 control-label">Instructions</label>
        <div class="col-sm-10">
        <textarea class="form-control" rows="6" name="instructions" id="instructions">{{recipe.instructions}}</textarea>
        </div>
      </div>
      <div class="form-group">
        <label for="url" class="col-sm-2 control-label">Link</label>
        <div class="col-sm-10">
          <input type="text" name="url" class="form-control" id="url" value="{{recipe.url}}">
        </div>
      </div>
        <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Photo</label>
        <div class="col-sm-10">
          <input type="text" name="image" class="form-control" id="image" value="{{recipe.image}}">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-info">Edit Recipe</button>
        </div>
      </div>
    </form>
  </div>
</div>